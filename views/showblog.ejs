<% include partials/header %>
    <div class="ui main text container">
   	    <!-- <div class="ui huge header"><%=blog.title%></div> -->
        <div class="ui top attached segment">
	        <div class="item">
	           <img class="ui centered rounded image" src="<%= blog.image %>">
	            <div class="content">
	                <div class="meta">
                    <h2><%= blog.title %></h2>
                    <hr>
	                </div>
            	     <div class="description">
            	        <p> <%= blog.info %></p>
                      <span><%= blog.created.toDateString() %></span>
            	     </div>
	            </div>
            </div>
            <div class="buttons">
              <a href="/store/<%=blog._id%>/edit" class="ui orange basic button">Update Post</a>
            <form  action="/store/<%= blog._id %>?_method=DELETE" method="POST">
              <button class="ui red basic button" >Delete post </button>
            </form>
            <a class="ui black basic button" href="/Store">Back</a>

            </div>

        </div>

    </div>



<% include partials/footer %>
